<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Admin Dashboard - Apz Store</title>
  
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
  
  <!-- FontAwesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
  
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/adminDashboard.css" />
</head>
<body class="d-flex flex-column flex-md-row min-vh-100 bg-dark">

  <!-- Sidebar -->
  <%- include('partials/sidebar') %>

  <!-- Main Content -->
  <div class="content flex-grow-1 p-4">

    <h4 class="text-white mb-4">Welcome to Admin</h4>

    <div class="row g-4">
      <!-- Total Products -->
      <div class="col-12 col-sm-6 col-lg-3">
        <div class="card card-stat bg-secondary text-white h-100">
          <div class="card-body text-center">
            <h6>Total Products</h6>
            <h3><%= productCount %></h3>
          </div>
        </div>
      </div>

      <!-- Total Users -->
      <div class="col-12 col-sm-6 col-lg-3">
        <div class="card card-stat bg-secondary text-white h-100">
          <div class="card-body text-center">
            <h6>Total Users</h6>
            <h3><%= userCount%></h3>
           
          </div>
        </div>
      </div>

      <!-- Sales Growth -->
      <div class="col-12 col-sm-6 col-lg-3">
        <div class="card card-stat bg-secondary text-white h-100">
          <div class="card-body text-center">
            <h6>Sales Growth</h6>
            <h3>0.00%</h3>
            <p class="mb-0">No sales activity recorded yet.</p>
          </div>
        </div>
      </div>

      <!-- Recent Orders -->
      <div class="col-12 col-sm-6 col-lg-3">
        <div class="card card-stat bg-secondary text-white h-100">
          <div class="card-body text-center">
            <h6>Recent Orders</h6>
            <h3>0</h3>
            <p class="mb-0">No recent orders placed.</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Business Chart -->
    <div class="card bg-secondary text-white mt-4">
      <div class="card-body">
        <h5 class="card-title text-center mb-4">Business Overview</h5>
        <canvas id="businessChart" height="120"></canvas>
      </div>
    </div>

  </div>

  <!-- Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <!-- Your custom JS -->
  <script src="/js/chart.js"></script>

</body>
</html>
